                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                        <button type="button" class="btn btn-danger"><a id="btn-supprimer">Supprimer</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}