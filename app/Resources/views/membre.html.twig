{% extends 'admin_dashboard.html.twig' %}
{% block content %}
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title mb-4">Gestion membre</h5>
                                <div class="fluid-container">
                                    {% for membre in Membres %}
                                    <div class="row ticket-card mt-3 pb-2 border-bottom pb-3 mb-3">
                                        <div class="col-md-1">
                                            <img class="img-sm rounded-circle mb-4 mb-md-0" src="{{ asset('uploads/avatar/'~membre.avatar) }}" alt="profile image">
                                        </div>
                                        <div class="ticket-details col-md-9">
                                            <div class="d-flex">
                                                <p class="text-dark font-weight-semibold mr-2 mb-0 no-wrap">{{ membre.nom }} {{ membre.prenom }} :</p>
                                                <p class="mb-0 ellipsis">{{ membre.email }}</p>
                                            </div>
                                            <p class="text-gray ellipsis mb-2">téléphone:{{ membre.tel }}</p>
                                            <p class="text-gray ellipsis mb-2">level:{{ membre.level }}</p>
                                            <p class="text-gray ellipsis mb-2">score:{{ membre.score }}</p>
                                            <p class="text-gray ellipsis mb-2">Role : {% if membre.roles[0] == "ROLE_USER" %}Membre {% elseif membre.roles[0] == "ROLE_ADMIN" %} Moderateur {% else %}Admin{% endif %}</small> </p>
                                            <div class="row text-gray d-md-flex d-none">
                                                <div class="col-4 d-flex">
                                                    <small class="mb-0 mr-2 text-muted text-muted">etat:</small>
                                                    <small class="Last-responded mr-2 mb-0 text-muted text-muted">
                                                        {% if membre.enabled==1 %}Active{% else %}Désactivé{% endif %}</small>
                                                </div>
                                                <div class="col-4 d-flex">
                                                    <small class="mb-0 mr-2 text-muted text-muted">dernière connection:</small>
                                                    <small class="Last-responded mr-2 mb-0 text-muted text-muted">{{ membre.lastLogin |date("m/d/Y H:i:s", "Europe/Paris") }}</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="ticket-actions col-md-2">
                                            <div class="btn-group dropdown">
                                                <div class="avatar pull-right dropdown" style="background-color: #66bb6a; color: white; width: 100px; height: 20px; border-radius: 20px;">
                                                            <a data-toggle="dropdown"  href="#" style="color: white; padding-left: 20px; "> Action</b>
                                                                <ul class="dropdown-menu" role="menu" style="height: auto; width: auto; background-color: white; font-size: 10px; text-decoration: none; ">
                                                                    {% if membre.roles[0] == "ROLE_ADMIN" %}
                                                                        <li style="border-bottom: 0px; padding-left: 20px; margin-top: -20px; font-size: 13px;" role="presentation"><a role="menuitem"  href="{{ path("Role_Membre",{'id': membre.id} ) }}">Membre</a></li>
                                                                    {% elseif  membre.roles[0] == "ROLE_USER" %}
                                                                        <li style="border-bottom: 0px; padding-left: 20px; margin-top: -20px; font-size: 13px;" role="presentation"><a role="menuitem" href="{{ path("Role_Moderateur",{'id': membre.id} ) }}">Moderateur</a></li>
                                                                    {% else %}

                                                                    {% endif %}
                                                                        <li style="border-bottom: 0px; padding-left: 20px; font-size: 13px;" role="presentation"><a role="menuitem"  href="{{ path("Modifier_etat_compte",{'id': membre.id} ) }}">Modifier etat compte</a></li>
                                                                </ul>
                                                            </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid clearfix">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © 2018
              <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash</a>. All rights reserved.</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
              <i class="mdi mdi-heart text-danger"></i>
            </span>
                </div>
            </footer>
        </div>
{% endblock %}